        <Image x:Name="image" HorizontalAlignment="Left" Height="35" Margin="3,31,0,0" VerticalAlignment="Top" Width="37" Source="res/ses.png" PreviewMouseDown="image_PreviewMouseDown"/>
        <Image x:Name="refresh" HorizontalAlignment="Left" Height="39" Margin="359,0,0,0" VerticalAlignment="Top" Width="39" Source="res/refresh.png" PreviewMouseDown="refresh_PreviewMouseDown" Stretch="Fill"/>
        <TextBlock x:Name="lbldiger" Text="Diğer Anlamlar:" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Width="371"  Height="57" FontSize="13.333" TextWrapping="WrapWithOverflow" />

